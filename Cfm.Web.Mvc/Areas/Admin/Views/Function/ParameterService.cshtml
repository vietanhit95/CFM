            </div>
        </a>
    </div>
    <div class="col-xs-3">
        <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("MappingManager","Mapping",new { Area = "Admin" })">
            <div class="tiles-body">
                <div class="text-center">
                    <i class="fa fa-user fa-2x"></i>
                </div>
            </div>
            <div class="tiles-footer">
                <div class="pull-left percent-change">
                    Danh mục chỉ tiêu kết nối
                </div>
            </div>
        </a>
    </div>
    <div class="col-xs-3">
        <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("TransferEntryManager","Mapping",new { Area = "Admin" })">
            <div class="tiles-body">
                <div class="text-center">
                    <i class="fa fa-user fa-2x"></i>
                </div>
            </div>
            <div class="tiles-footer">
                <div class="pull-left percent-change">
                    Bút toán kết chuyển
                </div>
            </div>
        </a>
    </div>
</div>
<!--End Danh mục-->
<hr class="Style1" />
<!--Cấu hình báo cáo-->
@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            if (item.ReportType.EndsWith("CD") || item.ReportType.EndsWith("CD_DETAIL"))
            {
                if (!item.ReportType.StartsWith("04"))
                {
                    <div class="col-xs-3">
                        <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("ConfigCD","ReportConfiguration",new { Area = "Admin", @reportID = @item.Id, @reportName = @item.Name })">
                            <div class="tiles-body">
                                <div class="text-center">
                                    <i class="fa fa-user fa-2x"></i>
                                </div>
                            </div>
                            <div class="tiles-footer">
                                <div class="pull-left percent-change">
                                    @item.Name
                                </div>
                            </div>
                        </a>
                    </div>
                }
                else
                {
                    <div class="col-xs-3">
                        <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("Config04CD","ReportConfiguration",new { Area = "Admin", @reportID = @item.Id, @reportName = @item.Name })">
                            <div class="tiles-body">
                                <div class="text-center">
                                    <i class="fa fa-user fa-2x"></i>
                                </div>
                            </div>
                            <div class="tiles-footer">
                                <div class="pull-left percent-change">
                                    @item.Name
                                </div>
                            </div>
                        </a>
                    </div>
                }

            }
            else if (item.ReportType == "03TH" || item.ReportType == "02TH" || item.ReportType == "01TH")
            {
                <div class="col-xs-3">
                    <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("ConfigReport", "ReportConfiguration", new { Area = "Admin", @ReportId = @item.Id, @ReportType = item.ReportType })">
                        <div class="tiles-body">
                            <div class="text-center">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="tiles-footer">
                            <div class="pull-left percent-change">
                                @item.Name
                            </div>
                        </div>
                    </a>
                </div>
            }
            else if (item.ReportType.EndsWith("TQ"))
            {
                <div class="col-xs-3">
                    <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("ConfigTQ","ReportConfiguration",new { Area = "Admin", @reportID = @item.Id, @reportName = @item.Name })">
                        <div class="tiles-body">
                            <div class="text-center">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="tiles-footer">
                            <div class="pull-left percent-change">
                                @item.Name
                            </div>
                        </div>
                    </a>
                </div>
            }

        }
    </div>
    <!--End Cấu hình báo cáo-->
}



