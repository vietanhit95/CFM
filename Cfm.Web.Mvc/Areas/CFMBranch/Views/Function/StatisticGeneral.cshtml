
@model List<Cfm.Web.Mvc.Areas.Admin.Models.ReportListViewModel>
@{Layout = "~/Areas/CFMBranch/Views/Shared/_Layout.cshtml"; }
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home", new{Area = "CFMBranch"})">Trang chủ</a></li>
    <li class="active">Tổng hợp - Thống kê</li>
</ol>

<!--Danh mục-->
<div class="row">

    @if (Model != null && Model.Count > 0)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            if (item.ReportType.Equals("02TH"))
            {
                <div class="col-xs-3">
                    <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("Report02TH","Accounting",new { Area = "CFMDistrict", @reportID = @item.Id})">
                        <div class="tiles-body">
                            <div class="text-center">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="tiles-footer">
                            <div class="pull-left percent-change">
                                Tổng hợp báo cáo 02-TH
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-xs-3">
                    <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("Report02THManage","Accounting",new { Area = "CFMDistrict", @reportID = @item.Id})">
                        <div class="tiles-body">
                            <div class="text-center">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="tiles-footer">
                            <div class="pull-left percent-change">
                                Quản trị 02-TH
                            </div>
                        </div>
                    </a>
                </div>

                //break;
            }
            if (item.ReportType.Equals("02TQ"))
            {
                <div class="col-xs-3">
                    <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("Report02TQManage","Accounting",new { Area = "CFMDistrict"})">
                        <div class="tiles-body">
                            <div class="text-center">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="tiles-footer">
                            <div class="pull-left percent-change">
                                Quản trị 02-TQ
                            </div>
                        </div>
                    </a>
                </div>
            }
        }       
    }

</div>
<hr class="Style1" />
