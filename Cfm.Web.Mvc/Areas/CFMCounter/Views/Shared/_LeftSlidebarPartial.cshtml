@{ Layout = null; }
@{
    Cfm.Web.Mvc.Areas.Admin.Models.PostOfficeViewModel oPo = new Cfm.Web.Mvc.Areas.Admin.Models.PostOfficeViewModel();
    if (Session[Cfm.Web.Mvc.Common.Constant.PO_SESSION] != null)
    {
        oPo = (Cfm.Web.Mvc.Areas.Admin.Models.PostOfficeViewModel)Session[Cfm.Web.Mvc.Common.Constant.PO_SESSION];
    }

    Cfm.Web.Mvc.Areas.Admin.Models.EmployeeViewModel oEmployee = new Cfm.Web.Mvc.Areas.Admin.Models.EmployeeViewModel();
    if (Session[Cfm.Web.Mvc.Common.Constant.EMP_SESSION] != null)
    {
        oEmployee = (Cfm.Web.Mvc.Areas.Admin.Models.EmployeeViewModel)Session[Cfm.Web.Mvc.Common.Constant.EMP_SESSION];
    }
}

<div class="static-sidebar" style="position: fixed;">
    <div class="sidebar" style="">

        <div class="widget stay-on-collapse" id="widget-sidebar">
            <nav role="navigation" class="widget-body">
                <ul class="acc-menu">
                    <li>
                        <a class="fontbold text-uppercase" href="@Url.Action("Index", "Home", new { Area = "CFMCounter" })"><i class="fa fa-home"></i><span>TRANG CHỦ</span></a>
                    </li>
                    <li>
                        <a class="fontbold text-uppercase" href="@Url.Action("ConfigPO", "Function", new { Area = "CFMCounter"})"><i class="fa fa-home"></i><span>HỆ THỐNG</span></a>
                    </li>
                    <li>
                        <a class="fontbold text-uppercase" href="@Url.Action("FunctionPO", "Function", new { Area = "CFMCounter"})"><i class="fa fa-home"></i><span>CHỨC NĂNG BƯU CỤC</span></a>
                    </li>
                </ul>

            </nav>
        </div>     
    </div>
</div>


@if (oPo != null && oEmployee != null)
{
    <div class="static-sidebar sidebar-timework" id="TimeWorkSidebar">
        @{Html.RenderAction("TimeWork", "Home", new { Area = "Admin" }); }
    </div>
    <div class="static-sidebar sidebar-bottom">
        <div class="sidebar" style="">
            <div class="widget stay-on-collapse" id="widget-sidebar">
                <nav role="navigation" class="widget-body">
                    <ul class="acc-menu infoPO">
                        <li>
                            <span>
                                <i class="fa fa-home"></i>@(" " + oPo.Code + " - " + oPo.Name)
                            </span>
                        </li>
                        <li>
                            <span>
                                <i class="fa fa-group"></i>@(" " + oEmployee.EmpGroupName)
                            </span>
                        </li>
                        <li>
                            <span>
                                <i class="fa fa-user"></i>@(" " + oEmployee.FullName)
                            </span>
                        </li>
                    </ul>

                </nav>
            </div>
        </div>
    </div>
}