


@model Cfm.Web.Mvc.Areas.Admin.Models.ItemGroupViewModel

@using Cfm.Web.Mvc.Common;


<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<div class="panel panel-primary">
    <div class="panel-heading">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>
            @if (Model.ID > 0)
            {
                <span>@("Sửa Nhóm dịch vụ [" + Model.Name + "]")</span>
            }
            else
            {
                <span>@("Thêm mới Nhóm dịch vụ")</span>
            }
        </h4>
    </div>
    <div class="panel-body pb0">
        @using (Ajax.BeginForm("UpdateItemGroup", "Dictionary", new { Area = "Admin" }, new AjaxOptions { HttpMethod = Constant.Method.POST.ToString(), OnSuccess = "Dic.ItemGroupSuccess" }, new { @id = "fCreateItemGroup" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="Code">Mã Nhóm Dịch vụ</label>
                @Html.TextBoxFor(x => x.Code, new { @class = "form-control", @placeholder = "Mã Nhóm Dịch vụ" })
                @Html.ValidationMessageFor(x => x.Code)
                @Html.HiddenFor(x => x.ID)
            </div>
            <div class="form-group">
                <label for="Name">Tên Nhóm Dịch vụ</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tên Nhóm Dịch vụ" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="form-group">
                <label for="">Mã Báo cáo</label>
                @Html.DropDownListFor(x => x.ReportId, (IEnumerable<SelectListItem>)ViewBag.ListReport, new { @class = "form-control", @placeholder = "Mã Báo cáo" })
                @Html.ValidationMessageFor(x => x.ReportId)
            </div>

            <div class="form-group">
                <label for="">Dòng tiền</label>
                @Html.DropDownListFor(x => x.CashFllowId, (IEnumerable<SelectListItem>)ViewBag.ListCashFlow, new { @class = "form-control", @placeholder = "Dòng tiền" })
                @Html.ValidationMessageFor(x => x.CashFllowId)
            </div>

            <div class="modal-footer">
                <div class="row">
                    <div class="col-sm-12 text-right">
                        <button type="button" onclick="common.Submitform('fCreateItemGroup', true)" class="btn btn-pns text-right  btn-sm"><i class="glyphicon glyphicon-ok"></i> Cập nhật</button>
                        <button type="button" class="btn btn-danger btn-sm" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i> Thoát</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>