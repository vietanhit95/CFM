
@model List<Cfm.Web.Mvc.Areas.Admin.Models.ReportListViewModel>
@{Layout = "~/Areas/CFMDistrict/Views/Shared/_Layout.cshtml"; }
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home", new{Area = "CFMDistrict"})">Trang chủ</a></li>
    <li class="active">Quản trị và điều tiền BĐH</li>
</ol>

<!--Danh mục-->
<div class="row">

    @if (Model != null && Model.Count > 0)
    {
        for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            if (item.ReportType.Equals("03TH"))
            {
                <div class="col-xs-3">
                    <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("Report03TH","Accounting",new { Area = "CFMDistrict", @reportID = @item.Id})">
                        <div class="tiles-body">
                            <div class="text-center">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="tiles-footer">
                            <div class="pull-left percent-change">
                                Lập báo cáo 03-TH
                            </div>
                        </div>
                    </a>
                </div>

                <div class="col-xs-3">
                    <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("Report03THManage","Accounting",new { Area = "CFMDistrict", @reportID = @item.Id})">
                        <div class="tiles-body">
                            <div class="text-center">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="tiles-footer">
                            <div class="pull-left percent-change">
                                Quản trị 03-TH
                            </div>
                        </div>
                    </a>
                </div>

                //break;
            }
            if (item.ReportType.Equals("03TQ"))
            {
                <div class="col-xs-3">
                    <a class="info-tiles tiles-cfm has-footer" href="@Url.Action("Report03TQManage","Accounting",new { Area = "CFMDistrict", @reportID = @item.Id})">
                        <div class="tiles-body">
                            <div class="text-center">
                                <i class="fa fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="tiles-footer">
                            <div class="pull-left percent-change">
                                Quản trị 03-TQ
                            </div>
                        </div>
                    </a>
                </div>
            }

        }
    }

</div>


